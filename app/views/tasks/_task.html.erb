<tr>
  <th><%= task.id %></th>
  <th><%= task.name %></th>
  <th><%= task.content %></th>
  <th><%= task.status_name %></th>
  <th><%= task.created_at.strftime('%Y/%m/%d %H:%M:%S') %></th>
  <th><%= link_to 'Edit', edit_task_path(task) %></th>
  <th><%= link_to "delete", task, method: :delete, class: "btn btn-danger", data: { confirm: "You sure?" } %></th>
</tr>